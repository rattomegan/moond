<% } else { %>
  <div>Notes for today:</div>
  <% period.notes.forEach(function(n) { %>
    <div>cramps: <%= n.cramps %></div>
    <div>energy: <%= n.energy %></div>
    <div>mood: <%= n.mood %></div>
    <div>comments: <%= n.comments %></div>
    <a href="/notes/<%= n._id %>/edit">Edit Notes</a>
    <% }) %>
<% } %>
</section>



<%- include('../partials/header') %>

<section>
<a href="/periods">Return to Periods overview</a>
<h1>Detail View</h1>
  <div>Phase: <%= period.phase %></div>
  <div>Date: <%= period.periodDate.toLocaleDateString() %></div>

</section>

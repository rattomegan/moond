<%- include('../partials/header') %>

<section>
<a href="/periods/<%= period._id %>">Return to Periods overview</a>
<h1>Edit Period Notes</h1>

<section id="notes">
  <form id="note-form" action="/periods/<%= period._id %>/notes" method="POST">
    <div>day notes:</div>
    <label>cramps:</label>
    <input type="radio" name="cramps" >0 
    <input type="radio" name="cramps" value="1">1 
    <input type="radio" name="cramps" value="2">2 
    <input type="radio" name="cramps" value="3">3  
    <input type="radio" name="cramps" value="4">4 
    <input type="radio" name="cramps" value="5">5 <br>
    
    no energy<input type="range" min="0" max="5" name="energy">high energy
    <div>mood</div>
    <input type="checkbox" name="mood" value="Anxious">Anxious
    <input type="checkbox" name="mood" value="Nervous">Nervous
    <input type="checkbox" name="mood" value="Tense">Tense
    <input type="checkbox" name="mood" value="Depressed">Depressed
    <input type="checkbox" name="mood" value="Sad">Sad
    <input type="checkbox" name="mood" value="Lost">Lost
    <input type="checkbox" name="mood" value="Iritated">Iritated
    <input type="checkbox" name="mood" value="Happy">Happy
    <input type="checkbox" name="mood" value="Optimistic">Elated
    <input type="checkbox" name="mood" value="Pessimistic">Elated
    <input type="checkbox" name="mood" value="Elated">Elated
    <input type="checkbox" name="mood" value="I feel nothing.">I feel nothing. <br>
    <textarea name="comments"></textarea>
    <input type="submit" value="Save Notes">
  </form>

  <div>Notes for today:</div>


    <a href="/periods/<%= period._id %>/edit">Edit Notes</a>

</section>


